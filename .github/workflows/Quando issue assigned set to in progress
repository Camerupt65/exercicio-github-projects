name: Issue Assigned â†’ In Progress

on:
  issues:
    types: [assigned]

jobs:
  set-status-in-progress:
    runs-on: ubuntu-latest
    steps:
      - name: Set Status to "In Progress"
        uses: actions/github-script@v7
        with:
          script: |
            const issue_number = context.payload.issue.number;
            const owner = context.repo.owner;
            const repo = context.repo.repo;
            
            // Adiciona/atualiza o label "Status: In Progress"
            await github.rest.issues.addLabels({
              owner,
              repo,
              issue_number,
              labels: ['Status: In Progress']
            });
            
            // Remove outros status (opcional)
            const currentLabels = context.payload.issue.labels.map(l => l.name);
            for (const label of currentLabels) {
              if (label.startsWith('Status:') && label !== 'Status: In Progress') {
                await github.rest.issues.removeLabel({
                  owner,
                  repo,
                  issue_number,
                  name: label
                }).catch(() => {});
              }
            }
